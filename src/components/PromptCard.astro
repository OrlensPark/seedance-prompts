---
import type { Prompt } from '../data/prompts';
import { categories } from '../data/prompts';

interface Props {
  prompt: Prompt;
}

const { prompt } = Astro.props;
const category = categories.find(c => c.id === prompt.category);
---

<article class="prompt-card" data-category={prompt.category}>
  <div class="card-header">
    <div class="category-badge" style={`--cat-color: ${category?.color}`}>
      <span class="cat-icon">{category?.icon}</span>
      <span>{category?.name}</span>
    </div>
    <div class="model-badge">{prompt.model}</div>
  </div>

  <h3 class="card-title">{prompt.title}</h3>
  <p class="card-title-zh">{prompt.titleZh}</p>

  <div class="card-meta">
    <span class="meta-item">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"/>
        <polyline points="12,6 12,12 16,14"/>
      </svg>
      {prompt.duration || '5-10s'}
    </span>
    <span class="meta-item">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="23,7 16,12 23,17"/>
        <rect x="1" y="5" width="15" height="14" rx="2" ry="2"/>
      </svg>
      {prompt.type === 'text-to-video' ? 'T2V' : 'I2V'}
    </span>
    <span class={`difficulty difficulty-${prompt.difficulty}`}>
      {prompt.difficulty}
    </span>
  </div>

  <div class="prompt-preview">
    <code>{prompt.prompt.slice(0, 150)}...</code>
  </div>

  <div class="card-tags">
    {prompt.tags.slice(0, 4).map(tag => (
      <span class="tag">{tag}</span>
    ))}
    {prompt.tags.length > 4 && <span class="tag">+{prompt.tags.length - 4}</span>}
  </div>

  <div class="card-actions">
    <button class="btn btn-primary copy-btn" data-prompt={prompt.prompt}>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
        <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1"/>
      </svg>
      Copy Prompt
    </button>
    <a href={`/prompt/${prompt.id}`} class="btn btn-secondary">
      View Details
    </a>
  </div>
</article>

<style>
  .prompt-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: all var(--transition-base);
  }

  .prompt-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-color-hover);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0.75rem;
    background: color-mix(in srgb, var(--cat-color) 15%, transparent);
    border: 1px solid color-mix(in srgb, var(--cat-color) 30%, transparent);
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--cat-color);
  }

  .cat-icon {
    font-size: 1rem;
  }

  .model-badge {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    font-family: var(--font-mono);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .card-title-zh {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: -0.5rem 0 0 0;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .meta-item svg {
    opacity: 0.7;
  }

  .difficulty {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .difficulty-beginner {
    background: rgba(39, 174, 96, 0.15);
    color: #27AE60;
  }

  .difficulty-intermediate {
    background: rgba(255, 184, 0, 0.15);
    color: #FFB800;
  }

  .difficulty-advanced {
    background: rgba(231, 76, 60, 0.15);
    color: #E74C3C;
  }

  .prompt-preview {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: 1rem;
    flex: 1;
  }

  .prompt-preview code {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-secondary);
    line-height: 1.6;
    display: block;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .card-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
  }

  .card-actions .btn {
    flex: 1;
    padding: 0.75rem;
    font-size: 0.85rem;
  }

  .copy-btn.copied {
    background: var(--accent-primary);
    color: var(--bg-primary);
  }
</style>

<script>
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const prompt = btn.getAttribute('data-prompt');
      if (prompt) {
        await navigator.clipboard.writeText(prompt);
        btn.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20,6 9,17 4,12"/>
          </svg>
          Copied!
        `;
        btn.classList.add('copied');
        setTimeout(() => {
          btn.innerHTML = `
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
              <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1"/>
            </svg>
            Copy Prompt
          `;
          btn.classList.remove('copied');
        }, 2000);
      }
    });
  });
</script>
